@using MudBlazor
@using MudBlazor.Utilities
@inherits LayoutComponentBase

<MudThemeProvider Theme="_sunsetTheme" IsDarkMode="true"/>
<MudPopoverProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudText>
            <img src="assets/logo.svg" height="24px" class="mt-2 mr-2" alt=""/> The Sunset Language
        </MudText>
        <MudSpacer/>
        <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/">Home</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/learn">Learn</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/playground">Playground</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/install">Install</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/ref">Reference</MudButton>
        <MudButton Variant="Variant.Text" Color="Color.Inherit" Href="/about">About</MudButton>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{

    readonly MudTheme _sunsetTheme = new()
    {
        PaletteDark = new PaletteDark
        {
            Background = new MudColor("#1E1E1E"),
            TextPrimary = new MudColor("#FFFFFF"),
        },
        Typography = new Typography
        {
            Default = new DefaultTypography
            {
                FontFamily = ["Noto Sans", "sans-serif"],
            },
            Body1 = new Body1Typography
            {
                FontWeight = "300",
                FontSize = "12pt"
            }
        }
    };

}